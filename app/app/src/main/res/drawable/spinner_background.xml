<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <stroke
                android:width="1dp"
                android:color="#CCCCCC" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!-- Dropdown arrow -->
    <item
        android:gravity="end|center_vertical"
        android:right="8dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="0%"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <size
                    android:width="8dp"
                    android:height="8dp" />
                <solid android:color="#888888" />
            </shape>
        </rotate>
    </item>
    <item
        android:gravity="end|center_vertical"
        android:right="8dp"
        android:top="4dp">
        <rotate
            android:fromDegrees="225"
            android:pivotX="50%"
            android:pivotY="100%"
            android:toDegrees="225">
            <shape android:shape="rectangle">
                <size
                    android:width="8dp"
                    android:height="8dp" />
                <solid android:color="#888888" />
            </shape>
        </rotate>
    </item>
</layer-list>